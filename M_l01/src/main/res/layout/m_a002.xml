<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/m_a002_t001"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:text="@string/m_a002_t001"
            android:textColor="@color/White"
            android:textSize="@dimen/fontsize" />

        <TextView
            android:id="@+id/m_a002_t002"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:text="@string/m_a002_t002"
            android:textColor="@color/Black"
            android:textSize="@dimen/fontsize" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/m_a002_t003"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@color/White"
            android:gravity="center|center_horizontal"
            android:text="@string/m_a002_t003"
            android:textColor="#D50000"
            android:textSize="@dimen/fontsize"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/m_a002_t004"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/p10"
            android:background="@color/White"
            android:gravity="end"
            android:text="@string/myname"
            android:textColor="@color/Blue"
            android:textSize="@dimen/fontsize" />
    </TableRow>

</LinearLayout>