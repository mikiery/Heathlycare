<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/pa01">

    <TextView
        android:id="@+id/mF_t0017"
        android:layout_width="match_parent"
        android:layout_height="@dimen/p50"
        android:background="@color/purple_200"
        android:gravity="center"
        android:text="@string/mF_t0017"
        android:textSize="@dimen/fontsize" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <Button
        android:id="@+id/mF_b007"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="42dp"
        android:layout_marginBottom="45dp"
        android:text="@string/mF_b007"
        android:textSize="@dimen/fontsize" />

    <Button
        android:id="@+id/mF_b008"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_alignStart="@+id/mF_b007"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="159dp"
        android:layout_marginBottom="47dp"
        android:text="@string/mF_b008"
        android:textSize="@dimen/fontsize" />

</RelativeLayout>